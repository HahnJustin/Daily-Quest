<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="?attr/colorPrimary"
    android:background="@drawable/rounded_bg"
    android:padding="4dp"
    android:layout_marginBottom="4dp">

    <!-- First LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:backgroundTint="?attr/colorPrimary">

        <TextView
            android:id="@+id/task_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Task Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:scrollbars="none"
            android:paddingLeft="4dp"/>

        <ImageView
            android:id="@+id/priority_image"

            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/low_priority_icon"
            android:background="@drawable/rounded_no_pad_bg"
            android:backgroundTint="?attr/colorPrimary"
            android:contentDescription="@string/edit_task" />

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_square_24"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:contentDescription="@string/edit_task"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:contentDescription="@string/delete_task"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Second LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="?attr/colorPrimaryLight"
        android:background="@drawable/rounded_bg">

        <TextView
            android:id="@+id/task_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task Description"
            android:ellipsize="end"
            android:maxLines="15"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimaryVariant"
            android:padding="4dp"/>
    </LinearLayout>

</LinearLayout>
